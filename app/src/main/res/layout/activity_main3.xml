<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainViewModel"
            type="com.app.kotlinbasicslearn.mvvm.viewmodel.MainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvvm.viewmodel.MainActivity">

        <ImageView
            android:id="@+id/imageView"
            imageFromUrl="@{mainViewModel.url}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(mainViewModel.countLiveData)}"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_50ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnIncrease"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txCount" />

        <TextView
            android:id="@+id/txCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(mainViewModel.countLiveData)}"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_50ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnUpdate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Update"
            app:layout_constraintBottom_toTopOf="@+id/btnIncrease"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnIncrease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="@{()->mainViewModel.increaseCount()}"
            android:text="Increase"
            app:layout_constraintBottom_toTopOf="@+id/btnDecrease"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnDecrease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="@{()->mainViewModel.decreaseCount()}"
            android:text="Decrease"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />"

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>